<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản Lý Sinh Viên"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_gravity="center">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Họ và Tên"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp">
        </TextView>

        <EditText
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/edit_name">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ngày tháng năm sinh"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp">

        </TextView>

        <EditText
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/edit_namsinh">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Trường học"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp">

        </TextView>

        <EditText
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/edit_school">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Giới tính"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp">

        </TextView>

        <RadioGroup
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:id="@+id/rdbt_nam">

            </RadioButton>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:id="@+id/rdbt_nu">

            </RadioButton>
        </RadioGroup>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sở thích"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/black">

    </TextView>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thể thao"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:id="@+id/checkbox_thethao">

    </CheckBox>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Du lịch"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:id="@+id/checkbox_dulich">

    </CheckBox>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đọc sách"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:id="@+id/checkbox_docsach">

    </CheckBox>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nhập liệu"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/bt_nhaplieu">

        </Button>

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nhập lại"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:id="@+id/bt_nhaplai">

        </Button>

        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Xem danh sách"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/bt_xemds">

        </Button>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_ds">

    </ListView>
</LinearLayout>